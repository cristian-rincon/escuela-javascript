    "license": "MIT",
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/joi": "^17.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongodb": "^3.6.2"
    },
    "devDependencies": {
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "mocha": "^8.2.0",
        "nodemon": "^2.0.4",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "proxyquire": "^2.1.3",
        "sinon": "^9.2.0",
        "supertest": "^5.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
